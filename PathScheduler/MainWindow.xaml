<Window x:Class="PathScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathScheduler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="{StaticResource WindowBackground}">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="45" LastChildFill="False" Background="{StaticResource WindowHeader}" MouseDown="DockPanel_MouseDown">
            <Button x:Name="closeButton" Content="X" Width="25" DockPanel.Dock="Right"
                    Height="25" Margin="0,0,10,0" Click="CloseButton_Click"
                    BorderThickness="0" Background="{x:Null}" FontWeight="ExtraBlack"
                    Foreground="{StaticResource WindowTitle}" FontSize="18"/>
            <Button x:Name="maximizeButton" Content="□" Width="25" DockPanel.Dock="Right"
                Height="25" Margin="0,10,10,10"
                BorderThickness="0" Background="{x:Null}" FontWeight="ExtraBlack"
                Foreground="{StaticResource WindowTitle}" FontSize="18" Click="MaximizeButton_Click"/>
        </DockPanel>
        <Grid Width="794" DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="2" Grid.Row="3" Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="entryListButton" Content="Lista punktów" Grid.Column="0"
                        Grid.Row="1" VerticalAlignment="Stretch"
                        Click="EntryListButton_Click"
                        Background="{StaticResource ButtonBackground}"
                        Foreground="{StaticResource ButtonContent}"
                        BorderThickness="1" BorderBrush="{x:Null}"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
